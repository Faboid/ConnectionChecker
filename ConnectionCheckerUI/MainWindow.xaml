<Window x:Name="Dashboard" x:Class="ConnectionCheckerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectionCheckerUI"
        mc:Ignorable="d"
        Title="ConnectionChecker" Height="163" Width="336" Background="#FF1A1A1A" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="DisplayText" IsReadOnly="True" HorizontalAlignment="Center" Text="Checking whether the internet connection is present... 
                 A sound will notify you once the connection has been established." TextWrapping="Wrap" VerticalAlignment="Center" Width="248" Height="87" Background="#FF604C4C" FontSize="16" TextAlignment="Center" Foreground="#FFD1D1D1"/>

    </Grid>
</Window>
